{
  "version": 2,
  "buildCommand": "cd app && npm install && npm run build && cd .. && node scripts/organize-dist.js",
  "outputDirectory": "dist",
  "installCommand": "cd app && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "routes": [
    {
      "src": "/app/assets/(.*)",
      "dest": "/app/assets/$1"
    },
    {
      "src": "/app/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/app/$1"
    },
    {
      "src": "/app(/.*)?",
      "dest": "/app/index.html"
    }
  ],
  "headers": [
    {
      "source": "/app/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.(mp4|mp3))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
